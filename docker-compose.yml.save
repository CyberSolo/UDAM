version: "3.9"

services:
  postgres:
    image: postgres:15
    container_name: my_postgres
    restart: always
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: password
      POSTGRES_DB: mydb
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:version: "3.9"
services:
  postgres:
    image: postgres:16
    container_name: udam-postgres
    environment:
      - POSTGRES_USER=udam
      - POSTGRES_PASSWORD=udam
      - POSTGRES_DB=udam
    ports:
      - "5432:5432"
    volumes:
      - ./data/postgres:/var/lib/postgresql/data
    restart: unless-stopped
